@model IEnumerable<DataObjects.VenueVM>

@{
    ViewBag.Title = "Index";
}


<div class="col-3"><h2>Venues</h2></div>
@using (Html.BeginForm("Index", "Venue", FormMethod.Post))
{
    <table>
        <tr>
            <td>Show venues with average revenue above: </td>
            <td>@Html.TextBox("filter")</td>
            <td><input type="submit" value="Search" /></td>
        </tr>        
    </table>
}


<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.VenueName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StreetAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ZipCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AverageTicketsSold)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AverageRevenue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastUsedOn)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VenueName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StreetAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ZipCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AverageTicketsSold)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AverageRevenue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastUsedOn)
            </td>

            <td>
                @Html.ActionLink("Details", "Details", new { id = item.VenueID })
            </td>
        </tr>
    }

</table>
